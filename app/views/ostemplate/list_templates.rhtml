<% content_for :sidebar do %>
<%= render :partial => 'links' %>
<% end %>

<h3> All OS Templates</h3> 
<table id="rounded-corner">
	<% for template in @templates %>
		<tr>
			<td> <%= template %> </td> 
			<td> <%= button_to "delete",{:action => :delete_template, :name => template}, {:confirm => "Are you sure?", :post => true} %> </td>
			<td> <%= button_to "copy", :action => :copy_template, :name => template %> </td>
		</tr>
<% end %>

</table>
