<% content_for :sidebar do %>
<%= render :partial => 'links' %>
<% end %>
<h2>User list</h2>

<table id="rounded-corner">
  <tr>
  <%# for column in User.content_columns %>
    <th>Name</th>
    <th>Username</th>
    <th>Role</th>
    <th></th>
    <th></th>
  <%# end %>
  </tr>
  
<% for user in @users %>
  <tr>
   <td><%= link_to user.name, :action => 'show', :id => user %> </td>
   <td> <%= user.username %> </td>
   <td> <%= user.authority %> </td>

    <td><%= button_to 'Edit', :action => 'edit', :id => user %></td>
    <td><%= button_to 'Change Password', :action => 'change_password', :id => user %></td>
  </tr>
<% end %>
</table>

